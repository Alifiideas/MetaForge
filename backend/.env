# ==================================================
# METAFORGE â€“ SERVER ENVIRONMENT VARIABLES
# ==================================================

# -------- SERVER --------
NODE_ENV=development
PORT=5000
BASE_URL=http://localhost:5000

# -------- CORS --------
CLIENT_URL=http://localhost:5173

# -------- AI PROVIDER --------
# OpenAI / compatible API
AI_PROVIDER=openai
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
OPENAI_MODEL=gpt-4.1-mini

# Optional fallback
OPENAI_TIMEOUT=30000

# -------- UPLOADS --------
UPLOAD_DIR=uploads
MAX_FILE_SIZE=52428800        # 50MB
MAX_FILES_PER_UPLOAD=100

# -------- RATE LIMITING --------
RATE_LIMIT_WINDOW_MS=60000    # 1 minute
RATE_LIMIT_MAX=60

# -------- TOKENS --------
TOKENS_FREE=10000
TOKENS_BRONZE=100000
TOKENS_SILVER=300000
TOKENS_GOLD=1000000

# -------- CSV --------
CSV_TEMP_DIR=uploads/csv
CSV_DELIMITER=,
CSV_ENCODING=utf-8

# -------- SECURITY --------
API_KEY_HEADER=x-api-key
JWT_SECRET=change_this_secret_later

# -------- QUEUE (FUTURE) --------
QUEUE_ENABLED=false
QUEUE_CONCURRENCY=3

# -------- LOGGING --------
LOG_LEVEL=debug
